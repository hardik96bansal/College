<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.hardik.colleges.Search"
    android:background="@drawable/grad">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/searchbutton"
        android:background="@drawable/search_withot_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search by Area"
        android:textSize="17sp"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/searchbutton"
        android:layout_alignLeft="@+id/searchbutton"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="17dp"
        android:layout_alignStart="@+id/searchbutton" />


    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_alignParentTop="true"
        android:layout_marginTop="205dp"
        android:id="@+id/rel1"
        android:paddingBottom="17dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:text="Your search for "
        android:textSize="31dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:text="the best college"
        android:textSize="31dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:layout_alignParentTop="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:text="starts here"
        android:textSize="31dp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        android:layout_alignParentTop="true" />

    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bookmarked  Colleges"
        android:textSize="17sp"
        android:background="@drawable/button_round"
        android:textColor="#ffffff"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="215dp"
        android:layout_alignTop="@id/rel1"
        android:id="@+id/search_bk" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:textSize="17sp"
        android:background="@drawable/button_round"
        android:textColor="#ffffff"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="20dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="56dp"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="280dp"
        android:layout_alignTop="@id/rel1"
        android:id="@+id/search_lg" />




</RelativeLayout>
